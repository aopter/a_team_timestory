<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$media:bg_in">

    <DependentLayout
        ohos:id="$+id:title"
        ohos:height="match_parent"
        ohos:width="match_content">

        <Button
            ohos:id="$+id:back"
            ohos:height="25fp"
            ohos:width="25fp"
            ohos:align_parent_top="true"
            ohos:background_element="$media:back"
            ohos:margin="28fp"/>

        <Text
            ohos:id="$+id:dynasty_name"
            ohos:height="match_content"
            ohos:width="35vp"
            ohos:background_element="#FFF"
            ohos:center_in_parent="true"
            ohos:margin="20fp"
            ohos:multiple_lines="true"
            ohos:text_alignment="center"
            ohos:text_size="30fp"/>

    </DependentLayout>

    <DependentLayout
        ohos:id="$+id:cont"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:above="$id:buttons"
        ohos:right_margin="20fp"
        ohos:right_of="$id:title">

        <Text
            ohos:id="$+id:dynasty_introduction"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:background_element="$media:bg_container"
            ohos:bottom_padding="25fp"
            ohos:left_padding="20fp"
            ohos:multiple_lines="true"
            ohos:right_padding="30fp"
            ohos:scrollable="true"
            ohos:text_color="$color:black"
            ohos:text_size="16vp"
            ohos:top_margin="5fp"
            ohos:top_padding="80fp"/>

    </DependentLayout>

    <DirectionalLayout
        ohos:id="$+id:buttons"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:align_parent_bottom="true"
        ohos:alignment="right"
        ohos:orientation="horizontal"
        ohos:right_margin="30fp"
        ohos:right_of="$id:title">

        <DependentLayout
            ohos:id="$+id:speech_dl"
            ohos:height="50vp"
            ohos:width="match_content"
            ohos:align_parent_bottom="true"
            ohos:alignment="right"
            ohos:right_margin="30fp"
            ohos:right_of="$id:title"
            ohos:weight="1">

            <Button
                ohos:id="$+id:speech"
                ohos:height="match_content"
                ohos:width="110fp"
                ohos:background_element="$graphic:cornert"
                ohos:bottom_margin="18fp"
                ohos:left_margin="10fp"
                ohos:padding="8fp"
                ohos:right_margin="10fp"
                ohos:text="播报"
                ohos:text_color="#FFF"
                ohos:text_size="14fp"/>

        </DependentLayout>

        <DependentLayout
            ohos:height="50vp"
            ohos:width="match_content"
            ohos:weight="3">

            <Button
                ohos:id="$+id:map"
                ohos:height="match_content"
                ohos:width="110fp"
                ohos:background_element="$graphic:cornert"
                ohos:bottom_margin="18fp"
                ohos:left_margin="10fp"
                ohos:padding="8fp"
                ohos:right_margin="10fp"
                ohos:text="进入全景图"
                ohos:text_color="#FFF"
                ohos:text_size="14fp"/>

            <Button
                ohos:id="$+id:problem"
                ohos:height="match_content"
                ohos:width="110fp"
                ohos:background_element="$graphic:cornert"
                ohos:bottom_margin="18fp"
                ohos:left_margin="10fp"
                ohos:padding="8fp"
                ohos:right_margin="10fp"
                ohos:right_of="$id:map"
                ohos:text="朝代知道多少"
                ohos:text_color="#FFF"
                ohos:text_size="14fp"/>

            <Button
                ohos:id="$+id:event"
                ohos:height="match_content"
                ohos:width="110fp"
                ohos:background_element="$graphic:cornert"
                ohos:bottom_margin="18fp"
                ohos:left_margin="10fp"
                ohos:padding="8fp"
                ohos:right_margin="10fp"
                ohos:right_of="$id:problem"
                ohos:text="进入详情"
                ohos:text_color="#FFF"
                ohos:text_size="14fp"/>

        </DependentLayout>
    </DirectionalLayout>


</DependentLayout>