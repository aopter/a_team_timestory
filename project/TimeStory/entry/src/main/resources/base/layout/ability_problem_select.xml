<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$media:bg_problem_info"
    ohos:orientation="vertical">

    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:layout_alignment="horizontal_center"
        ohos:text="我来考考你"
        ohos:text_color="$color:ourDynastyRed"
        ohos:text_font="serif"
        ohos:text_size="24fp"
        ohos:text_weight="600"
        ohos:top_margin="10vp"
        />
    <!--    经验 积分-->
    <DependentLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:top_margin="5vp">

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_of="$id:tv_user_e"
            ohos:text="经验："
            ohos:text_size="14fp"/>

        <Text
            ohos:id="$+id:tv_user_e"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_of="$id:count"
            ohos:text="555"
            ohos:text_size="14fp"/>

        <Text
            ohos:id="$+id:count"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_of="$id:tv_user_c"
            ohos:text="   积分："
            ohos:text_size="14fp"/>

        <Text
            ohos:id="$+id:tv_user_c"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:align_parent_right="true"
            ohos:right_margin="15vp"
            ohos:text="666"
            ohos:text_size="14fp"/>

    </DependentLayout>

    <!--选择题-->
    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:orientation="vertical">
        <!--   题干-->
        <Text
            ohos:id="$+id:tv_title"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:left_margin="15vp"
            ohos:multiple_lines="true"
            ohos:text="题目：你喜欢这个界面吗"
            ohos:text_size="17fp"
            ohos:top_margin="15vp"/>
        <!--    选择题选项的布局-->
        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:top_margin="2vp"
            ohos:weight="3">
            <!--        A-->
            <DirectionalLayout
                ohos:id="$+id:dl_xuan_a"
                ohos:height="match_parent"
                ohos:width="0vp"
                ohos:alignment="center"
                ohos:orientation="vertical"
                ohos:weight="1">

                <Image
                    ohos:id="$+id:iv_optionA"
                    ohos:height="100vp"
                    ohos:width="100vp"
                    ohos:above="$id:a1"
                    ohos:image_src="$media:select_lian"
                    ohos:scale_mode="stretch"
                    />

                <DirectionalLayout
                    ohos:id="$+id:a1"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:alignment="center"
                    ohos:orientation="horizontal"
                    ohos:top_margin="15vp">

                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:align_parent_bottom="true"
                        ohos:layout_alignment="left|top"
                        ohos:text="A "
                        ohos:text_size="12fp"/>

                    <Text
                        ohos:id="$+id:tv_optionA"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:layout_alignment="center"
                        ohos:multiple_lines="true"
                        ohos:text="杨玉杨玉环杨玉环杨玉环杨玉环杨玉环杨玉环杨玉环杨玉环杨玉环杨玉环环"
                        ohos:text_size="12fp"/>

                </DirectionalLayout>

                <Image
                    ohos:id="$+id:iv_checkA"
                    ohos:height="20vp"
                    ohos:width="20vp"
                    ohos:top_margin="2vp"/>

            </DirectionalLayout>
            <!--            B-->
            <DirectionalLayout
                ohos:id="$+id:dl_xuan_b"
                ohos:height="match_parent"
                ohos:width="0vp"
                ohos:alignment="center"
                ohos:orientation="vertical"
                ohos:weight="1">

                <Image
                    ohos:id="$+id:iv_optionB"
                    ohos:height="100vp"
                    ohos:width="100vp"
                    ohos:above="$id:a2"
                    ohos:center_in_parent="true"
                    ohos:image_src="$media:select_lian"
                    ohos:scale_mode="stretch"
                    ohos:top_margin="15vp"/>

                <DirectionalLayout
                    ohos:id="$+id:a2"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:alignment="center"
                    ohos:orientation="horizontal"
                    >

                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:align_parent_bottom="true"
                        ohos:layout_alignment="left|top"
                        ohos:text="B "
                        ohos:text_size="12fp"/>

                    <Text
                        ohos:id="$+id:tv_optionB"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:align_parent_bottom="true"
                        ohos:layout_alignment="center"
                        ohos:multiple_lines="true"
                        ohos:text="杨玉环"
                        ohos:text_size="12fp"/>

                </DirectionalLayout>

                <Image
                    ohos:id="$+id:iv_checkB"
                    ohos:height="20vp"
                    ohos:width="20vp"
                    ohos:top_margin="2vp"/>

            </DirectionalLayout>
            <!--            C-->
            <DirectionalLayout
                ohos:id="$+id:dl_xuan_c"
                ohos:height="match_parent"
                ohos:width="0vp"
                ohos:alignment="center"
                ohos:orientation="vertical"
                ohos:weight="1">

                <Image
                    ohos:id="$+id:iv_optionC"
                    ohos:height="100vp"
                    ohos:width="100vp"
                    ohos:above="$id:a3"
                    ohos:center_in_parent="true"
                    ohos:image_src="$media:select_lian"
                    ohos:scale_mode="stretch"
                    />

                <DirectionalLayout
                    ohos:id="$+id:a3"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:alignment="center"
                    ohos:orientation="horizontal"
                    ohos:top_margin="15vp">

                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:align_parent_bottom="true"
                        ohos:text_size="12fp"
                        ohos:layout_alignment="left|top"
                        ohos:text="C "
                        />

                    <Text
                        ohos:id="$+id:tv_optionC"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:align_parent_bottom="true"
                        ohos:layout_alignment="center"
                        ohos:multiple_lines="true"
                        ohos:text="杨玉环"
                        ohos:text_size="12fp"/>

                </DirectionalLayout>

                <Image
                    ohos:id="$+id:iv_checkC"
                    ohos:height="20vp"
                    ohos:width="20vp"
                    ohos:top_margin="2vp"/>

            </DirectionalLayout>
            <!--            D-->
            <DirectionalLayout
                ohos:id="$+id:dl_xuan_d"
                ohos:height="match_parent"
                ohos:width="0vp"
                ohos:alignment="center"
                ohos:orientation="vertical"
                ohos:weight="1">

                <Image
                    ohos:id="$+id:iv_optionD"
                    ohos:height="100vp"
                    ohos:width="100vp"
                    ohos:above="$id:a"
                    ohos:center_in_parent="true"
                    ohos:image_src="$media:select_lian"
                    ohos:scale_mode="stretch"
                    />

                <DirectionalLayout
                    ohos:id="$+id:a"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:alignment="center"
                    ohos:orientation="horizontal"
                    ohos:top_margin="15vp">

                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:align_parent_bottom="true"
                        ohos:text="D "
                        ohos:text_size="12fp"
                        ohos:layout_alignment="left|top"/>

                    <Text
                        ohos:id="$+id:tv_optionD"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:align_parent_bottom="true"
                        ohos:layout_alignment="center"
                        ohos:multiple_lines="true"
                        ohos:text="杨玉环"
                        ohos:text_size="12fp"/>

                </DirectionalLayout>

                <Image
                    ohos:id="$+id:iv_checkD"
                    ohos:height="20vp"
                    ohos:width="20vp"
                    ohos:top_margin="2vp"/>
            </DirectionalLayout>

        </DirectionalLayout>
        <!--        按钮-->
        <DependentLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:margin="10vp"
            ohos:orientation="horizontal"
            ohos:weight="1">

            <!--            上一题-->
            <Text
                ohos:id="$+id:problem_p"
                ohos:height="35vp"
                ohos:width="80vp"
                ohos:align_parent_left="true"
                ohos:alpha="0.9"
                ohos:background_element="$media:button"
                ohos:left_margin="20vp"
                ohos:padding="5vp"
                ohos:text="上一题"
                ohos:text_alignment="center"
                ohos:text_color="#AE5B41"
                ohos:text_size="12fp"/>
            <!--            下一题-->
            <Text
                ohos:id="$+id:problem_n"
                ohos:height="35vp"
                ohos:width="80vp"
                ohos:alpha="0.9"
                ohos:background_element="$media:button"
                ohos:left_margin="20vp"
                ohos:padding="5vp"
                ohos:right_of="$id:problem_p"
                ohos:text="下一题"
                ohos:text_alignment="center"
                ohos:text_color="#AE5B41"
                ohos:text_size="12fp"/>
            <!--            显示解析-->
            <Text
                ohos:id="$+id:problem_answer"
                ohos:height="35vp"
                ohos:width="80vp"
                ohos:alpha="0.9"
                ohos:background_element="$media:button"
                ohos:layout_alignment="right"
                ohos:left_margin="20vp"
                ohos:left_of="$+id:problem_save"
                ohos:padding="5vp"
                ohos:text="查看解析"
                ohos:text_alignment="center"
                ohos:text_color="#AE5B41"
                ohos:text_size="12fp"/>

            <!--            收藏-->
            <Text
                ohos:id="$+id:problem_save"
                ohos:height="35vp"
                ohos:width="80vp"
                ohos:align_parent_right="true"
                ohos:alpha="0.9"
                ohos:background_element="$media:button"
                ohos:left_margin="20vp"
                ohos:padding="5vp"
                ohos:text="收藏"
                ohos:text_alignment="center"
                ohos:text_color="#AE5B41"
                ohos:text_size="12fp"/>

            <Text
                ohos:id="$+id:problem_up"
                ohos:height="35vp"
                ohos:width="80vp"
                ohos:alpha="0.9"
                ohos:background_element="$media:button"
                ohos:layout_alignment="right"
                ohos:left_margin="20vp"
                ohos:padding="5vp"
                ohos:text="提交"
                ohos:text_alignment="center"
                ohos:text_color="#AE5B41"
                ohos:text_size="12vp"/>

        </DependentLayout>


    </DirectionalLayout>

</DirectionalLayout>