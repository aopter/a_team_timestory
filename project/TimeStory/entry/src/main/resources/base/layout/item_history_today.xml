<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$media:background"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:history_today_title"
        ohos:height="50vp"
        ohos:width="match_parent"
        ohos:alpha="0.8"
        ohos:background_element="$color:white"
        ohos:text=""
        ohos:text_alignment="center"
        ohos:text_color="#AE5B41"
        ohos:text_size="20fp"/>

    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:alpha="0.8"
        ohos:background_element="#AE5B41"
        ohos:orientation="vertical">

        <DependentLayout
            ohos:height="50vp"
            ohos:width="match_parent"
            ohos:background_element="$color:colorBorder">

            <Text
                ohos:height="match_parent"
                ohos:width="match_content"
                ohos:alpha="0.8"
                ohos:left_of="$id:history_today_time"
                ohos:text="时间:"
                ohos:text_color="$color:white"
                ohos:text_size="15fp"
                ohos:top_padding="20vp"/>

            <Text
                ohos:id="$+id:history_today_time"
                ohos:height="match_parent"
                ohos:width="match_content"
                ohos:align_parent_end="true"
                ohos:alpha="0.8"
                ohos:right_padding="20vp"
                ohos:text=""
                ohos:text_color="$color:white"
                ohos:text_size="15fp"
                ohos:top_padding="20vp"/>
        </DependentLayout>

        <Text
            ohos:multiple_lines="true"
            ohos:id="$+id:history_today_body"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:left_padding="20vp"
            ohos:right_padding="20vp"
            ohos:text=""
            ohos:text_alignment="horizontal_center"
            ohos:text_color="$color:white"
            ohos:text_size="15fp"
            ohos:top_padding="20vp"/>
    </DirectionalLayout>
</DirectionalLayout>