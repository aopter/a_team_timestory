<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_content"
    ohos:orientation="vertical">

    <DependentLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$media:bg_recharge"
        ohos:orientation="vertical">

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:above="$id:recharge_bg"
            ohos:horizontal_center="true"
            ohos:text="10积分"
            ohos:text_size="20fp"
            ohos:top_margin="70vp"/>

        <Image
            ohos:id="$+id:recharge_bg"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:center_in_parent="true"
            ohos:image_src="$media:recharge"
            ohos:left_margin="40vp"
            ohos:right_margin="40vp"
            ohos:scale_mode="zoom_center"/>

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:below="$id:recharge_bg"
            ohos:bottom_margin="70vp"
            ohos:horizontal_center="true"
            ohos:text="1元"
            ohos:text_size="15fp"/>
    </DependentLayout>

    <Button
        ohos:height="40vp"
        ohos:width="match_parent"
        ohos:background_element="$graphic:recharge_get"
        ohos:text="购买"
        ohos:top_padding="10vp"
        ohos:bottom_padding="10vp"
        ohos:text_size="15fp"/>
</DirectionalLayout>