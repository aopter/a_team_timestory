<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$media:bg_problem_info"
    ohos:orientation="vertical">


    <!--    标题-->
    <DirectionalLayout
        ohos:height="0vp"
        ohos:width="match_parent"
        ohos:text_alignment="center"
        ohos:weight="1">

        <Text
            ohos:id="$+id:title_collection"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:align_parent_top="true"
            ohos:bottom_margin="5vp"
            ohos:text_alignment="center"
            ohos:text="我的收藏"
            ohos:text_color="$color:ourDynastyRed"
            ohos:text_size="24fp"
            ohos:text_weight="600"
            ohos:top_margin="15vp"/>
    </DirectionalLayout>


    <!--    下半部分-->
    <DirectionalLayout
        ohos:height="0vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:weight="9"
        >

        <!--        朝代-->
        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:orientation="vertical"
            ohos:weight="1">

            <Text
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:text_alignment="center"
                ohos:padding="5vp"
                ohos:text="朝代"
                ohos:text_color="$color:ourDynastyRed"
                ohos:text_size="22fp"/>
            <!--            朝代-->
            <ListContainer
                ohos:id="$+id:type_dynasty"
                ohos:height="match_content"
                ohos:width="match_parent"/>
        </DirectionalLayout>
        <!--        题目-->
        <DependentLayout
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:weight="9">
            <!--        题目-->
            <Text
                ohos:id="$+id:tv_collection_null"
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:text_alignment="center"
                ohos:text="收藏里面空空如也，快去答题吧~"
                ohos:text_color="#77000000"
                ohos:text_size="18fp"/>


            <ListContainer
                ohos:id="$+id:re_problems"
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:alignment="vertical_center"
                ohos:alpha="0.9"
                ohos:rebound_effect="true"/>

        </DependentLayout>

    </DirectionalLayout>

</DirectionalLayout>