<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$media:set"
    ohos:orientation="horizontal">

    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_content"
        ohos:orientation="vertical">

        <Text
            ohos:height="match_content"
            ohos:width="120vp"
            ohos:background_element="$media:setting1"
            ohos:left_margin="0"
            ohos:text_color="#B22222"
            ohos:text_size="20vp"
            ohos:weight="3"/>

        <Button
            ohos:height="match_content"
            ohos:width="120vp"
            ohos:background_element="$media:setting1"
            ohos:left_margin="0"
            ohos:text="个人资料"
            ohos:text_color="#B22222"
            ohos:text_size="20vp"
            ohos:top_margin="0"
            ohos:weight="3"/>

        <Button
            ohos:height="match_content"
            ohos:width="120vp"
            ohos:background_element="$media:setting1"
            ohos:left_margin="0"
            ohos:text="音量设置"
            ohos:text_color="#B22222"
            ohos:text_size="20vp"
            ohos:top_margin="0"
            ohos:weight="3"/>

        <Button
            ohos:height="match_content"
            ohos:width="120vp"
            ohos:background_element="$media:setting1"
            ohos:left_margin="0"
            ohos:text="查看规则"
            ohos:text_color="#B22222"
            ohos:text_size="20vp"
            ohos:top_margin="0"
            ohos:weight="3"/>

        <Button
            ohos:height="match_content"
            ohos:width="120vp"
            ohos:background_element="$media:setting1"
            ohos:left_margin="0"
            ohos:text="反馈问题"
            ohos:text_color="#B22222"
            ohos:text_size="20vp"
            ohos:top_margin="0"
            ohos:weight="3"/>

        <Button
            ohos:height="match_content"
            ohos:width="120vp"
            ohos:background_element="$media:setting1"
            ohos:left_margin="0"
            ohos:text="退出登录"
            ohos:text_color="#B22222"
            ohos:text_size="20vp"
            ohos:top_margin="0"
            ohos:weight="3"/>

        <Text
            ohos:height="match_content"
            ohos:width="120vp"
            ohos:alpha="0.3"
            ohos:background_element="$color:white"
            ohos:left_margin="0"
            ohos:text_color="#B22222"
            ohos:text_size="20vp"
            ohos:weight="6"/>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent"/>
</DirectionalLayout>