<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$media:set"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alpha="0.8"
        ohos:orientation="vertical">

        <Text
            ohos:height="40vp"
            ohos:width="match_parent"
            ohos:background_element="$media:setting1"
            ohos:left_margin="0"
            ohos:text="个人资料"
            ohos:text_alignment="center"
            ohos:text_color="#B22222"
            ohos:text_size="20vp"/>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="vertical">

            <Image
                ohos:id="$+id:setting_user_header"
                ohos:height="100vp"
                ohos:width="100vp"
                ohos:clickable="true"
                ohos:image_src="$media:test_header"
                ohos:layout_alignment="center"
                ohos:scale_mode="zoom_center"/>

            <DependentLayout
                ohos:height="60vp"
                ohos:width="match_parent"
                ohos:top_margin="10vp">

                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:align_parent_start="true"
                    ohos:left_margin="40vp"
                    ohos:text="昵称"
                    ohos:text_size="20vp"/>

                <Text
                    ohos:id="$+id:setting_user_name"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:align_parent_end="true"
                    ohos:right_margin="40vp"
                    ohos:text=""
                    ohos:text_size="20vp"/>

                <Text
                    ohos:id="$+id:modify_name"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:align_parent_end="true"
                    ohos:clickable="true"
                    ohos:right_margin="10vp"
                    ohos:text=">"
                    ohos:text_size="20vp"/>
            </DependentLayout>

            <DependentLayout
                ohos:height="60vp"
                ohos:width="match_parent"
                ohos:top_margin="20vp">

                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:align_parent_start="true"
                    ohos:left_margin="40vp"
                    ohos:text="个性签名"
                    ohos:text_size="20vp"/>

                <Text
                    ohos:id="$+id:setting_user_signature"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:left_of="$id:modify_user_signature"
                    ohos:right_margin="10vp"
                    ohos:text=""
                    ohos:text_size="20vp"/>

                <Text
                    ohos:id="$+id:modify_user_signature"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:align_parent_end="true"
                    ohos:clickable="true"
                    ohos:right_margin="10vp"
                    ohos:text=">"
                    ohos:text_size="20vp"/>
            </DependentLayout>

            <DependentLayout
                ohos:height="60vp"
                ohos:width="match_parent"
                ohos:top_margin="20vp">

                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:align_parent_start="true"
                    ohos:left_margin="40vp"
                    ohos:text="手机号"
                    ohos:text_size="20vp"/>

                <Text
                    ohos:id="$+id:setting_user_phone"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:left_of="$id:modify_user_phone"
                    ohos:right_margin="10vp"
                    ohos:text=""
                    ohos:text_size="20vp"/>

                <Text
                    ohos:id="$+id:modify_user_phone"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:align_parent_end="true"
                    ohos:clickable="true"
                    ohos:right_margin="10vp"
                    ohos:text=">"
                    ohos:text_size="20vp"/>
            </DependentLayout>

            <DependentLayout
                ohos:height="60vp"
                ohos:width="match_parent"
                ohos:top_margin="20vp">

                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:align_parent_start="true"
                    ohos:left_margin="40vp"
                    ohos:text="性别"
                    ohos:text_size="20vp"/>

                <RadioContainer
                    ohos:id="$+id:radio_container"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:align_parent_end="true"
                    ohos:layout_alignment="horizontal_center"
                    ohos:orientation="horizontal"
                    ohos:top_margin="32vp">

                    <RadioButton
                        ohos:id="$+id:radio_button_1"
                        ohos:height="40vp"
                        ohos:width="match_content"
                        ohos:text="男"
                        ohos:text_size="20vp"/>

                    <RadioButton
                        ohos:id="$+id:radio_button_2"
                        ohos:height="40vp"
                        ohos:width="match_content"
                        ohos:text="女"
                        ohos:text_size="20vp"/>
                </RadioContainer>
            </DependentLayout>
        </DirectionalLayout>

        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="$media:setting1"
            ohos:text="规则"
            ohos:text_alignment="center"
            ohos:text_color="#B22222"
            ohos:text_size="20vp"/>

        <DirectionalLayout
            ohos:height="500vp"
            ohos:width="match_parent"
            ohos:background_element="$media:rule">

            <ScrollView
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:margin="50vp">

                <DirectionalLayout
                    ohos:height="800vp"
                    ohos:width="match_parent"
                    ohos:margin="50vp">

                    <Text
                        ohos:id="$+id:setting_rule"
                        ohos:height="match_content"
                        ohos:width="400vp"
                        ohos:bottom_padding="50vp"
                        ohos:layout_alignment="horizontal_center"
                        ohos:multiple_lines="true"
                        ohos:text=""
                        ohos:text_size="20vp"
                        ohos:top_padding="50vp"/>
                </DirectionalLayout>
            </ScrollView>
        </DirectionalLayout>

        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="$media:setting1"
            ohos:text="反馈问题"
            ohos:text_alignment="center"
            ohos:text_color="#B22222"
            ohos:text_size="20vp"/>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent">

            <TextField
                ohos:id="$+id:setting_question"
                ohos:height="300vp"
                ohos:width="match_parent"
                ohos:alpha="0.8"
                ohos:background_element="$color:white"
                ohos:hint="想给我们说点什么"
                ohos:left_margin="50vp"
                ohos:left_padding="20vp"
                ohos:right_margin="50vp"
                ohos:top_margin="50vp"
                ohos:top_padding="20vp"/>

            <Button
                ohos:id="$+id:btn_submit_question"
                ohos:height="40vp"
                ohos:width="100vp"
                ohos:background_element="$media:login_button"
                ohos:layout_alignment="horizontal_center"
                ohos:text="提交"
                ohos:text_color="#AE5B41"
                ohos:text_size="10fp"/>
        </DirectionalLayout>

        <Button
            ohos:id="$+id:setting_exit_btn"
            ohos:height="match_content"
            ohos:width="200vp"
            ohos:background_element="$media:setting1"
            ohos:bottom_margin="20vp"
            ohos:layout_alignment="center"
            ohos:text="退出登录"
            ohos:text_alignment="center"
            ohos:text_color="#B22222"
            ohos:text_size="20vp"/>
    </DirectionalLayout>
</ScrollView>