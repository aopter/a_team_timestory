<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$media:big_bg_recharge"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:left_margin="30vp"
        ohos:orientation="horizontal"
        ohos:top_margin="30vp">

        <Image
            ohos:height="25vp"
            ohos:width="45vp"
            ohos:image_src="$media:back"/>

        <Text
            ohos:height="25vp"
            ohos:width="match_content"
            ohos:text="充值"
            ohos:text_size="20fp"/>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent">

        <ListContainer
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:orientation="horizontal"/>
    </DirectionalLayout>
</DirectionalLayout>