<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:container"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Text
        ohos:height="5vp"
        ohos:width="match_parent"
        ohos:background_element="$media:problem_title_bgg"/>
    <!--选择题-->
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="vertical"
        ohos:top_margin="10vp">
        <!--   题干-->
        <Text
            ohos:id="$+id:tv_title"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:margin="15vp"
            ohos:text="题目：你喜欢这个界面吗"
            ohos:text_size="18fp"/>
        <!--    选择题选项的布局-->
        <DirectionalLayout
            ohos:top_margin="20vp"
            ohos:left_margin="10vp"
            ohos:right_margin="10vp"
            ohos:bottom_margin="25vp"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal">

            <!--        A-->
            <DirectionalLayout
                ohos:id="$+id:dl_xuan_a"
                ohos:height="match_parent"
                ohos:width="0vp"
                ohos:layout_alignment="center"
                ohos:orientation="vertical"
                ohos:weight="1">

                <Image
                    ohos:id="$+id:iv_optionA"
                    ohos:height="100vp"
                    ohos:width="100vp"
                    ohos:above="$id:a"
                    ohos:image_src="$media:select_lian"
                    ohos:top_margin="20vp"/>

                <DirectionalLayout
                    ohos:id="$+id:a"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:alignment="center"
                    ohos:orientation="horizontal"
                    ohos:top_margin="15vp">

                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:align_parent_bottom="true"
                        ohos:layout_alignment="center"
                        ohos:text="A "
                        ohos:text_size="17fp"/>

                    <Text
                        ohos:id="$+id:tv_optionA"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:align_parent_bottom="true"
                        ohos:text_alignment="center"
                        ohos:text="杨玉杨玉环杨玉环杨玉环杨玉环杨玉环杨玉环杨玉环杨玉环杨玉环杨玉环环"
                        ohos:text_size="15fp"/>

                </DirectionalLayout>


            </DirectionalLayout>
            <!--            B-->
            <DirectionalLayout
                ohos:id="$+id:dl_xuan_b"
                ohos:height="match_parent"
                ohos:width="0vp"
                ohos:alignment="center"
                ohos:orientation="vertical"
                ohos:weight="1">

                <Image
                    ohos:id="$+id:iv_optionB"
                    ohos:height="100vp"
                    ohos:width="100vp"
                    ohos:above="$id:a"
                    ohos:center_in_parent="true"
                    ohos:image_src="$media:select_lian"
                    ohos:top_margin="20vp"/>

                <DirectionalLayout
                    ohos:id="$+id:a"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:alignment="center"
                    ohos:orientation="horizontal"
                    ohos:top_margin="15vp">

                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:align_parent_bottom="true"
                        ohos:layout_alignment="center"
                        ohos:text="B   "
                        ohos:text_size="15fp"/>

                    <Text
                        ohos:id="$+id:tv_optionB"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:align_parent_bottom="true"
                        ohos:layout_alignment="center"
                        ohos:text="杨玉环"
                        ohos:text_size="17fp"/>

                </DirectionalLayout>


            </DirectionalLayout>
            <!--            C-->
            <DirectionalLayout
                ohos:id="$+id:dl_xuan_c"
                ohos:height="match_parent"
                ohos:width="0vp"
                ohos:alignment="center"
                ohos:orientation="vertical"
                ohos:weight="1">

                <Image
                    ohos:id="$+id:iv_optionC"
                    ohos:height="100vp"
                    ohos:width="100vp"
                    ohos:above="$id:a"
                    ohos:center_in_parent="true"
                    ohos:image_src="$media:select_lian"
                    ohos:top_margin="20vp"/>

                <DirectionalLayout
                    ohos:id="$+id:a"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:alignment="center"
                    ohos:orientation="horizontal"
                    ohos:top_margin="15vp">

                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:align_parent_bottom="true"
                        ohos:layout_alignment="center"
                        ohos:text="C   "
                        ohos:text_size="15fp"/>

                    <Text
                        ohos:id="$+id:tv_optionC"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:align_parent_bottom="true"
                        ohos:layout_alignment="center"
                        ohos:text="杨玉环"
                        ohos:text_size="17fp"/>

                </DirectionalLayout>


            </DirectionalLayout>
            <!--            D-->
            <DirectionalLayout
                ohos:id="$+id:dl_xuan_d"
                ohos:height="match_parent"
                ohos:width="0vp"
                ohos:alignment="center"
                ohos:orientation="vertical"
                ohos:weight="1">

                <Image
                    ohos:id="$+id:iv_optionD"
                    ohos:height="100vp"
                    ohos:width="100vp"
                    ohos:above="$id:a"
                    ohos:center_in_parent="true"
                    ohos:image_src="$media:select_lian"
                    ohos:top_margin="20vp"/>

                <DirectionalLayout
                    ohos:id="$+id:a"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:alignment="center"
                    ohos:orientation="horizontal"
                    ohos:top_margin="15vp">

                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:align_parent_bottom="true"
                        ohos:layout_alignment="center"
                        ohos:text="D   "
                        ohos:text_size="17fp"/>

                    <Text
                        ohos:id="$+id:tv_optionD"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:align_parent_bottom="true"
                        ohos:layout_alignment="center"
                        ohos:text="杨玉环"
                        ohos:text_size="15fp"/>

                </DirectionalLayout>

            </DirectionalLayout>


        </DirectionalLayout>
    </DirectionalLayout>
</DirectionalLayout>