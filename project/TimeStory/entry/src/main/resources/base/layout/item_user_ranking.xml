<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="40vp"
    ohos:width="match_parent"
    ohos:alpha="0.8"
    ohos:background_element="$color:white"
    ohos:orientation="horizontal"
    ohos:top_margin="10vp">

    <DependentLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:layout_alignment="vertical_center"
        ohos:left_margin="10vp"
        ohos:orientation="vertical">

        <Image
            ohos:id="$+id:rank_img"
            ohos:height="40vp"
            ohos:width="30vp"
            ohos:center_in_parent="true"
            ohos:scale_mode="zoom_center"/>

        <Text
            ohos:id="$+id:rank_num"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:center_in_parent="true"
            ohos:text_color="$color:white"
            ohos:text_size="10fp"/>

        <Text
            ohos:id="$+id:ranking_user_level"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$color:white"
            ohos:below="$id:rank_img"
            ohos:horizontal_center="true"
            ohos:text=""
            ohos:text_color="#AE5B41"
            ohos:text_size="12fp"/>
    </DependentLayout>

    <Image
        ohos:id="$+id:rank_user_header"
        ohos:height="50vp"
        ohos:width="50vp"
        ohos:layout_alignment="vertical_center"
        ohos:left_margin="8vp"
        ohos:scale_mode="zoom_center"/>

    <DependentLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:layout_alignment="vertical_center"
        ohos:left_margin="10vp">

        <Text
            ohos:id="$+id:rank_user_name"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text=""
            ohos:text_size="12fp"
            ohos:top_margin="5vp"/>

        <Text
            ohos:id="$+id:rank_user_something"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:align_left="$id:rank_user_name"
            ohos:below="$id:rank_user_name"
            ohos:text=""
            ohos:text_size="10fp"
            ohos:top_margin="10vp"/>
    </DependentLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:orientation="horizontal"
        ohos:top_margin="70vp">

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:bottom_margin="10vp"
            ohos:left_padding="10vp"
            ohos:text="经验："
            ohos:text_size="12fp"/>

        <Text
            ohos:id="$+id:ranking_point"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:bottom_margin="10vp"
            ohos:left_padding="10vp"
            ohos:text=""
            ohos:text_size="12fp"/>
    </DirectionalLayout>
</DirectionalLayout>