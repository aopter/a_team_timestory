<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$media:bg_user_center"
    ohos:orientation="vertical">

    <!--横向模块-->
    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:left_margin="15vp"
        ohos:orientation="horizontal"
        ohos:top_margin="15vp"
        ohos:weight="1">

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:clickable="true"
            ohos:layout_alignment="vertical_center"
            ohos:orientation="vertical">

            <Image
                ohos:id="$+id:user_center_header"
                ohos:height="30vp"
                ohos:width="30vp"
                ohos:image_src="$media:test_header"
                ohos:scale_mode="zoom_center"/>

            <ProgressBar
                ohos:id="$+id:user_center_pb"
                ohos:height="5vp"
                ohos:width="60vp"
                ohos:max="100"
                ohos:min="0"
                ohos:progress="60"
                ohos:progress_color="#AE5B41"
                ohos:progress_width="10vp"/>
        </DirectionalLayout>

        <DependentLayout
            ohos:id="$+id:dl_level"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$media:button"
            ohos:clickable="true"
            ohos:layout_alignment="vertical_center"
            ohos:left_margin="15vp">

            <Text
                ohos:id="$+id:user_center_tx_level"
                ohos:height="20vp"
                ohos:width="50vp"
                ohos:alpha="0.9"
                ohos:padding="5vp"
                ohos:text=""
                ohos:text_alignment="center"
                ohos:text_color="#AE5B41"
                ohos:text_size="10fp"/>
        </DependentLayout>

        <DependentLayout
            ohos:id="$+id:user_center_card_dl"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$media:button"
            ohos:clickable="true"
            ohos:layout_alignment="vertical_center"
            ohos:left_margin="15vp">

            <Text
                ohos:height="20vp"
                ohos:width="50vp"
                ohos:alpha="0.9"
                ohos:padding="5vp"
                ohos:text="抽卡"
                ohos:text_alignment="center"
                ohos:text_color="#AE5B41"
                ohos:text_size="10fp"/>
        </DependentLayout>

        <DependentLayout
            ohos:id="$+id:user_center_go_dynasty_dl"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$media:button"
            ohos:clickable="true"
            ohos:layout_alignment="vertical_center"
            ohos:left_margin="15vp">

            <Text
                ohos:height="20vp"
                ohos:width="50vp"
                ohos:alpha="0.9"
                ohos:padding="5vp"
                ohos:text="出行"
                ohos:text_alignment="center"
                ohos:text_color="#AE5B41"
                ohos:text_size="10fp"/>
        </DependentLayout>

        <DependentLayout
            ohos:id="$+id:user_center_point_dl"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$media:button"
            ohos:clickable="true"
            ohos:layout_alignment="vertical_center"
            ohos:left_margin="15vp">

            <Text
                ohos:id="$+id:str_rl"
                ohos:height="20vp"
                ohos:width="match_content"
                ohos:alpha="0.9"
                ohos:left_padding="10vp"
                ohos:text="积分:"
                ohos:text_alignment="center"
                ohos:text_color="#AE5B41"
                ohos:text_size="10fp"/>

            <Text
                ohos:id="$+id:user_center_tx_point"
                ohos:height="20vp"
                ohos:width="match_content"
                ohos:alpha="0.9"
                ohos:padding="5vp"
                ohos:right_of="$id:str_rl"
                ohos:text="40"
                ohos:text_alignment="center"
                ohos:text_color="#AE5B41"
                ohos:text_size="10fp"/>

            <Image
                ohos:id="$+id:image_rl"
                ohos:height="10vp"
                ohos:width="10vp"
                ohos:background_element="$media:plust"
                ohos:right_margin="10vp"
                ohos:right_of="$id:user_center_tx_point"
                ohos:vertical_center="true"/>
        </DependentLayout>

        <DependentLayout
            ohos:id="$+id:user_center_setting_dl"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$media:button"
            ohos:clickable="true"
            ohos:layout_alignment="vertical_center"
            ohos:left_margin="15vp">

            <Text
                ohos:height="20vp"
                ohos:width="50vp"
                ohos:alpha="0.9"
                ohos:padding="5vp"
                ohos:text="设置"
                ohos:text_alignment="center"
                ohos:text_color="#AE5B41"
                ohos:text_size="10fp"/>
        </DependentLayout>
    </DirectionalLayout>
    <!--中间两个模块-->
    <DependentLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:weight="10">
        <!--排行榜-->
        <DirectionalLayout
            ohos:id="$+id:dl_ranking"
            ohos:height="match_parent"
            ohos:width="match_content"
            ohos:align_parent_start="true"
            ohos:bottom_margin="50vp"
            ohos:left_margin="30vp"
            ohos:orientation="vertical"
            ohos:top_margin="30vp"
            ohos:total_weight="1">
            <!--排行榜-->
            <com.example.timestory.Utils.CusText
                ohos:height="20vp"
                ohos:width="match_content"
                ohos:background_element="#AE5B41"
                ohos:padding="5fp"
                ohos:text="排行榜"
                ohos:text_color="$color:white"
                ohos:text_size="12fp"/>

            <ListContainer
                ohos:id="$+id:user_center_ranking_lc"
                ohos:height="match_parent"
                ohos:width="300vp"
                ohos:alpha="0.8"
                ohos:background_element="#FFF"/>
        </DirectionalLayout>
        <!--历史上的今天-->
        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="match_content"
            ohos:align_parent_end="true"
            ohos:bottom_margin="50vp"
            ohos:orientation="vertical"
            ohos:right_margin="30vp"
            ohos:top_margin="30vp"
            ohos:total_weight="1">
            <!--历史上的今天-->
            <com.example.timestory.Utils.CusText
                ohos:height="20vp"
                ohos:width="match_content"
                ohos:background_element="#AE5B41"
                ohos:padding="5fp"
                ohos:text="历史上的今天"
                ohos:text_color="$color:white"
                ohos:text_size="12fp"/>

            <ListContainer
                ohos:id="$+id:user_center_history_today_lc"
                ohos:height="match_parent"
                ohos:width="300vp"
                ohos:alpha="0.8"
                ohos:background_element="#FFF"/>
        </DirectionalLayout>
    </DependentLayout>

    <!--底部一行横向模块-->
    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_content"
        ohos:bottom_margin="25vp"
        ohos:layout_alignment="horizontal_center"
        ohos:orientation="horizontal"
        ohos:weight="1">

        <DependentLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$media:button"
            ohos:layout_alignment="vertical_center">

            <Text
                ohos:id="$+id:user_center_my_card"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:alpha="0.9"
                ohos:bottom_padding="5vp"
                ohos:left_padding="10vp"
                ohos:right_padding="10vp"
                ohos:text="我的卡片"
                ohos:text_alignment="center"
                ohos:text_color="#AE5B41"
                ohos:text_size="10fp"
                ohos:top_padding="5vp"/>
        </DependentLayout>

        <DependentLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$media:button"
            ohos:layout_alignment="vertical_center"
            ohos:left_margin="60vp">

            <Text
                ohos:id="$+id:user_center_my_collections"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:alpha="0.9"
                ohos:padding="5vp"
                ohos:text="我的收藏"
                ohos:text_alignment="center"
                ohos:text_color="#AE5B41"
                ohos:text_size="10fp"/>
        </DependentLayout>
    </DirectionalLayout>
</DirectionalLayout>