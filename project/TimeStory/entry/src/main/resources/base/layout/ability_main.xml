<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:text_helloworld"
        ohos:height="120vp"
        ohos:width="match_content"
        ohos:background_element="$graphic:background_ability_main"
        ohos:layout_alignment="center"
        ohos:text="时光序项目"
        ohos:text_size="24fp"
        />

    <DirectionalLayout

        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:layout_alignment="horizontal_center"
        ohos:orientation="horizontal">

        <Text
            ohos:id="$+id:module_user"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:background_element="#ccc"
            ohos:margin="20vp"
            ohos:padding="30vp"
            ohos:text="用户模块"
            ohos:text_alignment="center"
            ohos:text_size="16fp"
            ohos:weight="1"/>

        <Text
            ohos:id="$+id:module_dynasty"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:background_element="#ccc"
            ohos:margin="20vp"
            ohos:padding="30vp"
            ohos:text="朝代模块"
            ohos:text_alignment="center"
            ohos:text_size="16fp"
            ohos:weight="1"/>

    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:layout_alignment="horizontal_center"
        ohos:orientation="horizontal">

        <Text
            ohos:id="$+id:module_card"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:background_element="#ccc"
            ohos:margin="20vp"
            ohos:padding="30vp"
            ohos:text="卡片模块"
            ohos:text_alignment="center"
            ohos:text_size="16fp"
            ohos:weight="1"/>

        <Text
            ohos:id="$+id:module_problem"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:background_element="#ccc"
            ohos:margin="20vp"
            ohos:padding="30vp"
            ohos:text="题目模块"
            ohos:text_alignment="center"
            ohos:text_size="16fp"
            ohos:weight="1"/>

    </DirectionalLayout>

</DirectionalLayout>