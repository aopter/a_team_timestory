<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:left_margin="30vp"
    ohos:orientation="horizontal"
    ohos:right_margin="30vp">

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="0"
        ohos:weight="1">

        <DirectionalLayout
            ohos:id="$+id:card_container1"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:margin="10vp"
            ohos:orientation="vertical"
            ohos:visibility="hide">

            <DependentLayout
                ohos:height="match_content"
                ohos:width="match_parent">

                <Image
                    ohos:id="$+id:card_pic1"
                    ohos:height="180vp"
                    ohos:width="140vp"
                    ohos:alpha="0.8"
                    ohos:background_element="$media:bg_card_img"
                    ohos:center_in_parent="true"
                    ohos:image_src="$media:share"
                    ohos:padding="20vp"
                    ohos:scale_mode="stretch"/>

                <Text
                    ohos:id="$+id:card_num1"
                    ohos:height="40vp"
                    ohos:width="40vp"
                    ohos:align_right="$id:card_pic1"
                    ohos:align_top="$id:card_pic1"
                    ohos:background_element="$media:bg_bubble_card"
                    ohos:text="1"
                    ohos:text_alignment="center"
                    ohos:text_color="$color:ourDynastyRed"
                    ohos:text_size="15fp"/>
            </DependentLayout>

            <Text
                ohos:id="$+id:card_name1"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:horizontal_center="true"
                ohos:padding="10vp"
                ohos:text_alignment="center"
                ohos:text_color="black"
                ohos:text_size="12fp"/>
        </DirectionalLayout>
    </DirectionalLayout>

